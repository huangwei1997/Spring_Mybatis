<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjtu.mapper.UserMapper">
    <!--用户登录sql配置-->
    <select id="selectUser" resultType="com.xjtu.pojo.User">
        select * from _user where uname=#{0} and pwd=#{1}
    </select>
</mapper>